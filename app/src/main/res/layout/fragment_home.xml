<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Fragment.HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:paddingStart="@dimen/tb_padding_left"
        android:paddingLeft="@dimen/tb_padding_left"
        android:paddingEnd="@dimen/tb_padding_right"
        android:paddingRight="@dimen/tb_padding_right">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/home"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_home"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_notification" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ic_dot_margin_left"
                android:layout_marginLeft="@dimen/ic_dot_margin_left"
                android:layout_marginTop="@dimen/ic_dot_margin_top"
                android:background="@drawable/ic_dot_notification" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/txt_feature_margin_left"
        android:layout_marginTop="@dimen/txt_feature_margin_top"
        android:layout_marginBottom="@dimen/txt_feature_margin_bot"
        android:text="@string/feature_workouts"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_feature_size"
        android:textStyle="bold" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_7dp"
            android:layout_marginLeft="@dimen/dimen_7dp"
            android:background="@drawable/ic_banner_blur"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_width="@dimen/btn_free_width"
            android:layout_height="@dimen/btn_free_height"
            android:layout_marginStart="@dimen/dimen_45dp"
            android:layout_marginLeft="@dimen/dimen_45dp"
            android:layout_marginTop="@dimen/dimen_29dp"
            android:background="@drawable/btn_green_radius6dp"
            android:text="@string/free"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_btn_free"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_33dp"
            android:layout_marginStart="@dimen/dimen_35dp"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_marginBottom="@dimen/dimen_29dp"
            android:background="@drawable/bg_level"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_9dp"
                android:background="@drawable/ic_start_fill" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@drawable/ic_start_fill" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@drawable/ic_start_fill" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@drawable/ic_strart_empty" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@drawable/ic_strart_empty" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_45dp"
            android:layout_marginLeft="@dimen/dimen_45dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:text="@string/whole_body"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/imageView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_39dp"
            android:layout_marginRight="@dimen/dimen_39dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen3dp"
                android:text="@string/bannertime50min"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_12sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/bg_planset">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_17dp"
            android:layout_marginLeft="@dimen/dimen_17dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:text="@string/plantset"
            android:textColor="@color/black"
            android:textSize="@dimen/txtsize_24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_45dp"
            android:layout_marginRight="@dimen/dimen_45dp"
            android:text="@string/seemore"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="@dimen/dimen_385dp"
            android:layout_height="@dimen/dimen_78dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_green_bg_radius10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/ly_home"
                android:layout_width="@dimen/dimen_63dp"
                android:layout_height="@dimen/dimen_63dp"
                android:layout_marginStart="@dimen/dimen_3dp"
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:background="@drawable/btn_circle_black"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView2">

                <ImageView
                    android:layout_width="@dimen/dimen_31dp"
                    android:layout_height="@dimen/dimen_31dp"
                    android:background="@drawable/ic_home" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_gym"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/dimen_39dp"
                android:layout_height="@dimen/dimen_39dp"
                android:layout_marginEnd="@dimen/dimen_23dp"
                android:layout_marginRight="@dimen/dimen_23dp"
                android:background="@drawable/ic_profile"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_90dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_90dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>